{
  "name": "@senars/ui",
  "version": "1.0.0",
  "description": "A clean, tested UI for SeNARS",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest tests/unit/",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest tests/integration/",
    "test:e2e": "CI=true playwright test --reporter=list",
    "test:screenshots": "playwright test tests/e2e/screenshots.spec.js",
    "test:debug": "CI=true playwright test tests/e2e/debug.spec.js --reporter=list",
    "test:graph": "CI=true playwright test tests/e2e/graph.spec.js --reporter=list",
    "test:production": "CI=true playwright test tests/e2e/production.spec.js --reporter=list",
    "test:verification": "CI=true playwright test tests/e2e/verification.spec.js --reporter=list",
    "build:ide": "esbuild src/browser-init.js --bundle --format=iife --platform=browser --outfile=browser-bundle.js --loader:.js=jsx --alias:fs/promises=./src/shims/mock-node.js --alias:fs=./src/shims/mock-node.js --alias:path=./src/shims/mock-node.js --alias:child_process=./src/shims/mock-node.js --alias:os=./src/shims/mock-node.js --alias:crypto=./src/shims/mock-node.js --alias:url=./src/shims/mock-node.js --alias:node:readline=./src/shims/mock-node.js --alias:node:util=./src/shims/mock-node.js --alias:node:path=./src/shims/mock-node.js --alias:node:os=./src/shims/mock-node.js --alias:node:crypto=./src/shims/mock-node.js --alias:stream=./src/shims/mock-node.js --alias:node:async_hooks=./src/shims/mock-node.js --alias:node:process=./src/shims/mock-node.js --alias:tty=./src/shims/mock-node.js --alias:module=./src/shims/mock-node.js --alias:node:module=./src/shims/mock-node.js --define:import.meta.url=\"''\" --inject:./src/shims/process-shim.js",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@senars/agent": "^1.0.0",
    "@senars/core": "^1.0.0",
    "golden-layout": "^2.6.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@playwright/test": "^1.56.1",
    "@storybook/addon-docs": "^10.0.8",
    "@storybook/html-vite": "^10.0.8",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.11",
    "storybook": "^10.0.8"
  },
  "keywords": [
    "senars",
    "nars",
    "ai",
    "reasoning",
    "ui"
  ],
  "author": "SeNARS Project",
  "license": "MIT"
}