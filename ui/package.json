{
  "name": "senars-ui",
  "version": "1.0.0",
  "description": "A clean, tested UI for SeNARS",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest tests/unit/",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest tests/integration/",
    "test:e2e": "CI=true playwright test --reporter=list",
    "test:debug": "CI=true playwright test tests/e2e/debug.spec.js --reporter=list",
    "test:graph": "CI=true playwright test tests/e2e/graph.spec.js --reporter=list",
    "test:production": "CI=true playwright test tests/e2e/production.spec.js --reporter=list",
    "test:verification": "CI=true playwright test tests/e2e/verification.spec.js --reporter=list"
  },
  "dependencies": {
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "babel-jest": "^30.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "senars",
    "nars",
    "ai",
    "reasoning",
    "ui"
  ],
  "author": "SeNARS Project",
  "license": "MIT"
}
